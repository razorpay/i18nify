{
  "name": "razorpay/i18nify-php",
  "description": "PHP SDK for i18nify - Comprehensive internationalization library for countries, currencies, phone numbers, and more",
  "type": "library",
  "license": "MIT",
  "keywords": ["i18n", "internationalization", "country", "currency", "phone", "localization"],
  "authors": [
    {
      "name": "Razorpay Engineering",
      "email": "engineering@razorpay.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0|^10.0",
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "Razorpay\\I18nify\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Razorpay\\I18nify\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse",
    "phpcs": "phpcs",
    "phpcbf": "phpcbf"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
