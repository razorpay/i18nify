<?xml version="1.0"?>
<ruleset name="i18nify-php">
    <description>PHP CodeSniffer configuration for i18nify-php</description>

    <!-- Include the PSR-12 coding standard -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>src</file>
    <file>tests</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>
    
    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Use colors -->
    <arg name="colors"/>
    
    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
</ruleset>
